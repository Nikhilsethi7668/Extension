{
  "name": "flash-fender-auto-poster",
  "version": "1.0.0",
  "description": "Desktop app for automated vehicle posting to Facebook Marketplace",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac",
    "dist": "electron-builder"
  },
  "author": "Flash Fender",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "puppeteer": "^21.0.0",
    "puppeteer-core": "^21.0.0",
    "smart-buffer": "^4.2.0",
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.flashfender.autoposter",
    "productName": "Flash Fender Auto-Poster",
    "win": {
      "target": [
        "nsis"
      ],
      "verifyUpdateCodeSignature": false,
      "sign": null,
      "forceCodeSigning": false
    },
    "mac": {
      "target": [
        "zip"
      ],
      "category": "public.app-category.business"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!.gitignore"
    ]
  }
}